    <script src="https://webgazer.cs.brown.edu/webgazer.js"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
        }
        .teclado {
            display: grid;
            grid-template-columns: repeat(5, 1fr);
            gap: 10px;
            margin: 20px;
        }
        .letra {
            padding: 15px;
            border: 2px solid #000;
            font-size: 24px;
            cursor: pointer;
        }
        #frase {
            font-size: 30px;
            margin: 20px;
            height: 50px;
        }
        #calibracion {
            margin-top: 50px;
        }
    </style>
